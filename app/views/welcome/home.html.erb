	<div class="sponsor-slider">
					
		<div><%= image_tag("trial.png", class: "slider__image") %></div>
		<div><%= image_tag("turnz.png", class: "slider__image") %></div>
		<div><%= image_tag("loods.png", class: "slider__image") %></div>
		<div><%= image_tag("suat.png", class: "slider__image") %></div>
