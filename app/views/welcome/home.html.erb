			<h3 class="container__header"></h3>
			
			<iframe width="560" height="315" src="https://www.youtube.com/embed/bfic6GYsrQo?&amp;showinfo=0" width="480" height="500" class="container__iframe" allowfullscreen></iframe>            
		</div>

	</div>
</div>


<!-- Lineup -->


<div class="section section--black" id="lineup">

	<div class="content-wrapper">

		<h2 class="section__header section__header--white">the line-up</h2>
		

		<div class="guest-slider">
			<%= render @guests %>	
		</div>

