<div class="container container--quarter container--zoom">
	<%= image_tag(guest.picture.url(:square), class: "container__image") %>
	<h3 class="container__header container__header--white"><%= guest.name %></h3>
	<% if logged_in?  %>
		<div class="container__button-wrapper">
			<%= link_to 'Edit', edit_guest_path(guest), class: 'container__button container__button--white' %>
			<%= link_to 'Delete', guest, method: :delete,class: 'container__button container__button--white' , data: { confirm: 'Are you sure?' } %>	
		</div>
	<% end %>
</div>