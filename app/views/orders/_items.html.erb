<table class="table">
  <thead>
    <tr class="table__row">
      <td class="table__cell">Item</td>
      <td class="table__cell">Price</td>
      <td class="table__cell">Quantity</td>
      <td class="table__cell">Total</td>
    </tr>
  </thead>
  <tbody>
    <% order.order_items.each do |item| %>
      <tr class="table__row">

        <td class="table__cell">

          <%= link_to product_path(item.ordered_item.permalink)do %>

            <% if item.ordered_item.default_image %>
              <%= image_tag item.ordered_item.default_image.path, class: "table__image" %>
            <% end %>

            <p class="table__text table__text--large">      
              <%= item.ordered_item.full_name %>    
            </p>
            
            <p class="table__text"><%= item.ordered_item.short_description %></p>

          <% end %>

        </td>

        <td class="table__cell">
          <p class="table__text"><%= number_to_currency item.sub_total %></p>  
        </td>
        <td class="table__cell">
          <p class="table__text"><%= item.quantity %></p>
        </td>
        <td class="table__cell">
          <p class="table__text"><%= number_to_currency item.total %></p>
        </td>
      </tr>
    <% end %>
