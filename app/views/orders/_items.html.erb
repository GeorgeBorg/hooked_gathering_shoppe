      <td><%= number_to_currency order.delivery_price + order.delivery_tax_amount %></td>
    </tr>
    <% end %> -->

  </tbody>
  <tfoot>
    <tr>
      <td class="table__cell" colspan='3'>
        <p class="table__text table__text--large">
          Sub-total
        </p>
      </td>
      <td class="table__cell">
        <p class="table__text table__text--large">
          <%= number_to_currency order.total %>
        </p>
      </td>
    </tr>
  </tfoot>
</table>